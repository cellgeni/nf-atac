process {
    withName: '.*CISTOPIC_COMBINEOBJECTS' {
        cpus       = 4
        queue      = { (task.attempt > 1) ? 'hugemem' : 'normal' }
        memory     = { 200.GB + 500.GB * (task.attempt - 1) }
        publishDir = [
            mode     : 'link',
            path     : 'results',
            overwrite: true
        ]
    }
}