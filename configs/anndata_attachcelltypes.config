process {
    withName: '.*ANNDATA_ATTACHCELLTYPES' {
        ext.barcode_column = 'barcode'
        ext.output = { "${meta.id}_gex.h5ad" }
        cpus       = 1
        queue      = 'normal'
        memory     = { 10.GB + 30.GB * (task.attempt - 1) }
        publishDir = [
            mode     : 'link',
            path     : { "${params.output_dir}/anndata/${meta.id}" },
            pattern  : '*.{h5ad}',
            overwrite: true
        ]
    }
}